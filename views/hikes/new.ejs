<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Hike</h1>
        <div class="col-6 offset-3">
            <form action="/hikes" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hike[title]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hike[location]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <!-- <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="hike[image]" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div> -->
                <div class="mb-3">
                    <label class="form-label" for="difficulty">Hike Difficulty</label>
                    <div class="input-group">

                        <input type="text" class="form-control" id="difficulty" placeholder="0/5"
                            aria-label="difficulty" aria-describedby="difficulty-label" name="hike[difficulty]"
                            required>
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hike[description]"
                        required></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mt-3 mb-5 custom-file">
                    <label for="image" class="form-label">Choose Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <label for="image" class="custom-file-label text-muted"></label>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Hike</button>
                </div>
            </form>
            <a href="/hikes">All Hikes</a>
        </div>
    </div>