<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">New Hike</h1>
        <div class="col-6 offset-3">
            <form action="/hikes" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hike[title]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hike[location]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="hike[image]">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="price">Hike Difficulty</label>
                    <div class="input-group">

                        <input type="text" class="form-control" id="price" placeholder="0/5" aria-label="price"
                            aria-describedby="price-label" name="hike[price]">
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hike[description]"></textarea>
                </div>
                <div class="mb-3">
                    <button class="btn btn-success">Add Hike</button>
                </div>
            </form>
            <a href="/hikes">All Hikes</a>
        </div>
    </div>