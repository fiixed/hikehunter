<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Hike</h1>
        <div class="col-6 offset-3">
            <form action="/hikes/<%=hike._id%>?_method=PUT" method="POST" novalidate class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hike[title]" value="<%=hike.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hike[location]"
                        value="<%=hike.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image Url</label>
                    <input class="form-control" type="text" id="image" name="hike[image]" value="<%=hike.image %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="difficulty">Hike Difficulty</label>
                    <div class="input-group">

                        <input type="text" class="form-control" id="difficulty" placeholder="0/5"
                            aria-label="difficulty" aria-describedby="difficulty-label" name="hike[difficulty]"
                            value="<%=hike.difficulty %>" required>\<div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hike[description]"
                        required><%= hike.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update Hike</button>
                </div>
            </form>
            <a href="/hikes/<%= hike._id%>">Back To Hike</a>

        </div>
    </div>