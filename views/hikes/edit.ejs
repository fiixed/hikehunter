<% layout('layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit Hike</h1>
        <div class="col-6 offset-3">
            <form action="/hikes/<%=hike._id%>?_method=PUT" method="POST" novalidate class="validated-form"
                enctype="multipart/form-data">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="hike[title]" value="<%=hike.title %>"
                        required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="hike[location]"
                        value="<%=hike.location %>" required>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="difficulty">Hike Difficulty</label>
                    <div class="input-group">

                        <input type="text" class="form-control" id="difficulty" placeholder="0.00"
                            aria-label="difficulty" aria-describedby="difficulty-label" name="hike[difficulty]"
                            value="<%=hike.difficulty %>" required>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="hike[description]"
                        required><%= hike.description%></textarea>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <div class="mt-3 mb-5 custom-file">
                    <label for="image" class="form-label">Choose Images</label>
                    <input class="form-control" type="file" id="image" name="image" multiple>
                    <label for="image" class="custom-file-label text-muted"></label>
                </div>
                <div class="mb-3">
                    <% hike.images.forEach(function(img, i) { %>
                        <img src="<%=img.thumbnail %>" class="img-thumbnail" alt="">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                        </div>
                        <label for="image-<%=i%>">Delete?</label>
                        <% })%>
                </div>
                <div class="mb-3">
                    <button class="btn btn-info">Update hike</button>
                </div>
            </form>
            <a href="/hikes/<%= hike._id%>">Back To hike</a>
        </div>
    </div>